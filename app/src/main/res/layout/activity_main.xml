<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btTip"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#7903A9F4"
        android:text="Cooking tip of the day"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRod" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Welcome to Cookversity"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btRecipes"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="160dp"
        android:background="#6DFFEB3B"
        android:text="Recipes"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <Button
        android:id="@+id/btQuiz"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="160dp"
        android:background="#6DFFEB3B"
        android:text="Cooking Quizzes"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btRecipes" />

    <Button
        android:id="@+id/btPrep"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="#6DFFEB3B"
        android:text="Meal Prepping"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/btRecipes"
        app:layout_constraintTop_toBottomOf="@+id/btRecipes" />

    <Button
        android:id="@+id/btInfo"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="#6DFFEB3B"
        android:text="Nutrition info"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/btQuiz"
        app:layout_constraintTop_toBottomOf="@+id/btQuiz" />

    <Button
        android:id="@+id/btCookbook"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="#6DFFEB3B"
        android:text="My Cookbook"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/btPrep"
        app:layout_constraintTop_toBottomOf="@+id/btPrep" />

    <Button
        android:id="@+id/btMyPrepper"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="#6DFFEB3B"
        android:text="My Meal Prepper"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/btInfo"
        app:layout_constraintTop_toBottomOf="@+id/btInfo" />

    <Button
        android:id="@+id/btRod"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#7903A9F4"
        android:text="Roll recipe of the day"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCookbook" />
</androidx.constraintlayout.widget.ConstraintLayout>